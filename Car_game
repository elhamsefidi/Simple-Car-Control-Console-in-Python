
user_input=""
started=False
while True:
    user_input=input(">").lower()
    if user_input =="help":
        print(""" 
start- to start the car
stop- to stop the code
quite-to exit
        """)
    elif user_input == "start":
        if started:
            print("car has already started")
        else:
            print("start the car")
            started=True
        start=True
    elif user_input=="quite":
        break
    elif user_input=="stop":
        if not started:
            print("car has already being stopped")
        else:
            print("stop the car")
            started=False
        
    else:
        print("sorry I don't understand that")


















